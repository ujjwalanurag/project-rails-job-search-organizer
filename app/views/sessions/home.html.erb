<h1 class="text-center">Welcome to Job Search Organizer</h1>

<p><%= flash[:message] %></p>
<div class="row my-5">
  <div class="col-8">
    <img src="https://cdn.pixabay.com/photo/2016/03/14/17/07/pants-1255851_1280.jpg" alt="job search" class="img-fluid">
  </div>

  <div class="col-4">
    <h5 class="mt-5">My Account</h5>
    <button type="button" class="btn btn-outline-dark btn-lg"><%= link_to "Log In", login_path, class: "btn-outline-dark" %></button>

    <h5 class="mt-5">Don't have an account?</h5>
    <button type="button" class="btn btn-outline-info btn-lg"><%= link_to "Sign Up", new_user_path, class: "btn-outline-info" %></button><br>

    <h5 class="mt-5">Or Log in with <%= link_to "Google", '/auth/google_oauth2' %></h5>


  </div>

</div>
