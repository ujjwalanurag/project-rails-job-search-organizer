<h1>Create your account</h1>

<p><%= flash[:message] if flash[:message]%></p>

<%= form_for @user, url: "/login" do |f| %>
  <div class="form-group">
    <%= f.label :email %><br>
    <%= f.email_field :email, class: "form-control" %>
  </div>

  <div class="form-group">
    <%= f.label :password %><br>
    <%= f.password_field :password, class: "form-control" %>
  </div>

  <div class="btn">
    <%= f.submit "Log In" %>
  </div>

<% end %>
