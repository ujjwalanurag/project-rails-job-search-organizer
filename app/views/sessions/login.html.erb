<div class="my-5">
  <h1>Let's get started</h1>
</div>

<p><%= flash[:message] %></p>

<%= form_for @user, url: "/login" do |f| %>
  <div class="form-group">
    <%= f.label :email %><br>
    <%= f.email_field :email, class: "form-control" %>
  </div>

  <div class="form-group">
    <%= f.label :password %><br>
    <%= f.password_field :password, class: "form-control" %>
  </div>

  <div class="mt-3">
    <%= f.submit "Log In", class: "btn btn-outline-dark" %>
  </div>

<% end %>
