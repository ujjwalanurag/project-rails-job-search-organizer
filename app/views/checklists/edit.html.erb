<h1 class="my-5">Update <%= display_title(@user.username) %>'s Checklist</h1>

<%= form_for [@user, @checklist] do |f| %>
  <div class="form-check">
    <%= f.check_box :resume, class: "form-check-input" %>
    <%= f.label "Resume sent?", class: "form-check-label"  %>
  </div>

  <div class="form-check">
    <%= f.check_box :interview, class: "form-check-input" %>
    <%= f.label "Inteview done?", class: "form-check-label"  %>
  </div>

  <div class="form-check">
    <%= f.check_box :completed, class: "form-check-input" %>
    <%= f.label "All done?", class: "form-check-label" %>
  </div>

  <div class="form-group my-4">
    <%= f.label "Add Brief Note" %><br>
    <%= f.text_field :note, class: "form-control" %>
  </div

  <div>
    <%= f.submit %>
  </div>
<% end %>
