<h1><%= @user.username %>'s Checklist New page</h1>

<%= form_for @user.checklists.build, url: user_checklists_path(@user) do |f| %>
  <p>Resume sent? <%= f.check_box :resume %></p>
  <p>Interview completed? <%= f.check_box :interview %></p>
  <p>All done? <%= f.check_box :completed %></p>
  <%#= hidden_field_tag position.id, position.id, name: "position_id" %>
  <p><%= f.submit %></p>
<% end %>
