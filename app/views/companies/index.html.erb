<h1 class="my-5">All Comapanies</h1>
<% if flash[:message] %>
  <p class="alert alert-danger"><%= flash[:message] %></p>
<% end %>

<% @companies.each do |company| %>
  <div class="card w-75">
    <div class="card-body">
      <h5 class="card-title"><%= display_title(company.name) %></h5>
      <p class="card-text">With supporting text below as a natural lead-in to additional content.</p>
      <%= link_to "Check positions", company_positions_path(company), class: "btn btn-info btn-sm" %>

      <% if current_user.admin == true %>
        <%= link_to "Edit the company", edit_company_path(company), class: "btn-btn-warning btn-sm" %>
      <% end %>
    </div>
  </div>
<% end %>
